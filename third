alfpha = "ABCDEFGHIJKLMNOPQRSTUVXYZ"
text = "Brut is planning to kill me"
cipher = ""
key = 3

for letter in text.upper():
    if letter in alfpha:
        letter_index = (alfpha.find(letter) + key) % len(alfpha) # 5 - 8
        cipher += alfpha[letter_index]
    else:
        cipher += letter
print(cipher)